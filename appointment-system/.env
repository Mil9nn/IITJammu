# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017/appointments

# Nodemailer Configuration (for sending emails)
EMAIL_HOST=smtp.gmail.com          # SMTP host (e.g., smtp.gmail.com)
EMAIL_PORT=587                     # SMTP port (e.g., 587 for TLS)
EMAIL_USER=your-email@gmail.com    # Your email address
EMAIL_PASSWORD=your-email-password # Your email password or app password
EMAIL_FROM=noreply@yourapp.com     # Sender email address
# Email Configuration
EMAIL_SERVICE=gmail


# Server Configuration
PORT=5000

# Allowed Origins for CORS (comma-separated if multiple)
ALLOWED_ORIGINS=http://localhost:3000,http://yourapp.com

# Optional: Logging Level (e.g., info, debug, error)
LOGGING_LEVEL=info